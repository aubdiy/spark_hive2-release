                  <shadedPattern>org.apache.spark-project.org.apache.curator</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.slf4j</pattern>
                  <shadedPattern>org.apache.spark-project.org.slf4j</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.hive</pattern>
                  <shadedPattern>org.apache.spark-project.org.apache.hive</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.hadoop.hive</pattern>
                  <shadedPattern>org.apache.spark-project.org.apache.hadoop.hive</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.eclipse.jetty</pattern>
                  <shadedPattern>org.apache.spark-project.org.eclipse.jetty</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.objectweb.asm</pattern>
                  <shadedPattern>org.apache.spark-project.org.objectweb.asm</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.xerial.snappy</pattern>
                  <shadedPattern>org.apache.spark-project.org.xerial.snappy</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.derby</pattern>
                  <shadedPattern>org.apache.spark-project.org.apache.derby</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.datanucleus</pattern>
                  <shadedPattern>org.apache.spark-project.org.datanucleus</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.joda.time</pattern>
                  <shadedPattern>org.apache.spark-project.org.joda.time</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.tukaani</pattern>
                  <shadedPattern>org.apache.spark-project.org.tukaani</shadedPattern>
                </relocation>
                <relocation>
